<!DOCTYPE HTML>

<html>
  <head>
  	<meta charset=#UTF-8>
  	<title>Bookers</title>
  </head>
  <body>
  	<h2>Books</h2>
  	<table>
  		<thead>
  		  <tr>
  			<th class="thead-text">Title</th>
  			<th class="thead-text">Body</th>
  			<th colspan="3"></th>
  		  </tr>
  		<thead>
	        <tbody>
		      <% @books.each do |book| %>
		        	<tr>
		        		<th class="tbody-text"><%= book.title %></th>
		        		<th class="tbody-text"><%= book.body %></th>
		        		<th class="tbody-text"><%= link_to "Show", book_path(book), :style=>"color: black;" %></th>
		        		<th class="tbody-text"><%= link_to "Edit", edit_book_path(book), :style=>"color: black;" %></th></th>
		        		<th class="tbody-text"><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: '削除しますか？'}, :style=>"color: black;" %></th>
		        	</tr>
		      <% end %>
	        </tbody>

  	</table>

    <h3>New book</h3>
    <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <%= form_for(@book) do |f| %>

      <p>Title</p>
      <%= f.text_field :title %>
    
      <p>Body</p>
      <%= f.text_area :body %>

      <div><%= f.submit 'Create book' %><div>

    <% end %>

  </body>
</html> 
